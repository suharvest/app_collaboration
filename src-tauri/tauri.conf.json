{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SenseCraft Solution",
  "identifier": "com.seeedstudio.sensecraft-solution",
  "version": "1.0.0",
  "build": {
    "frontendDist": "../frontend/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev --prefix frontend",
    "beforeBuildCommand": "npm run build --prefix frontend"
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "copyright": "Copyright (c) 2024 Seeed Studio",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/provisioning-station"
    ],
    "resources": [
      "../solutions/**/*"
    ],
    "targets": "all",
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libssl3"],
        "files": {
          "/etc/udev/rules.d/99-sensecraft-serial.rules": "deb-files/99-sensecraft-serial.rules"
        },
        "postInstallScript": "deb-files/postinst",
        "section": "utils",
        "priority": "optional"
      }
    },
    "macOS": {
      "entitlements": "entitlements.plist",
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null,
      "minimumSystemVersion": "11.0"
    }
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "SenseCraft Solution",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
