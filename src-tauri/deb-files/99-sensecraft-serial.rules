# SenseCraft Solution - Serial/USB Device Rules
# This file grants access to common serial adapters used by Seeed Studio devices
# Install location: /etc/udev/rules.d/99-sensecraft-serial.rules

# ==============================================
# WCH USB-Serial Controllers (CH340/CH341)
# Used by: SenseCAP Watcher, ESP32 DevKits
# ==============================================

# CH340 (main variant)
SUBSYSTEM=="usb", ATTR{idVendor}=="1a86", ATTR{idProduct}=="7523", MODE="0666"
# CH340K
SUBSYSTEM=="usb", ATTR{idVendor}=="1a86", ATTR{idProduct}=="7522", MODE="0666"
# CH341
SUBSYSTEM=="usb", ATTR{idVendor}=="1a86", ATTR{idProduct}=="5523", MODE="0666"
# CH9102 (newer variant)
SUBSYSTEM=="usb", ATTR{idVendor}=="1a86", ATTR{idProduct}=="55d2", MODE="0666"
SUBSYSTEM=="usb", ATTR{idVendor}=="1a86", ATTR{idProduct}=="55d3", MODE="0666"
SUBSYSTEM=="usb", ATTR{idVendor}=="1a86", ATTR{idProduct}=="55d4", MODE="0666"

# TTY devices from WCH
SUBSYSTEM=="tty", ATTRS{idVendor}=="1a86", MODE="0666"

# ==============================================
# Silicon Labs CP210x
# Used by: Various ESP32 boards
# ==============================================

SUBSYSTEM=="usb", ATTR{idVendor}=="10c4", ATTR{idProduct}=="ea60", MODE="0666"
SUBSYSTEM=="usb", ATTR{idVendor}=="10c4", ATTR{idProduct}=="ea61", MODE="0666"
SUBSYSTEM=="tty", ATTRS{idVendor}=="10c4", MODE="0666"

# ==============================================
# FTDI USB-Serial
# Used by: Some development boards
# ==============================================

SUBSYSTEM=="usb", ATTR{idVendor}=="0403", ATTR{idProduct}=="6001", MODE="0666"
SUBSYSTEM=="usb", ATTR{idVendor}=="0403", ATTR{idProduct}=="6010", MODE="0666"
SUBSYSTEM=="usb", ATTR{idVendor}=="0403", ATTR{idProduct}=="6014", MODE="0666"
SUBSYSTEM=="tty", ATTRS{idVendor}=="0403", MODE="0666"

# ==============================================
# Cvitek (reCamera)
# Used by: Seeed reCamera
# ==============================================

SUBSYSTEM=="usb", ATTR{idVendor}=="3346", ATTR{idProduct}=="1003", MODE="0666"
SUBSYSTEM=="usb", ATTR{idVendor}=="3346", ATTR{idProduct}=="1004", MODE="0666"
SUBSYSTEM=="tty", ATTRS{idVendor}=="3346", MODE="0666"

# ==============================================
# Espressif Native USB
# Used by: ESP32-S2, ESP32-S3, ESP32-C3 native USB
# ==============================================

SUBSYSTEM=="usb", ATTR{idVendor}=="303a", MODE="0666"
SUBSYSTEM=="tty", ATTRS{idVendor}=="303a", MODE="0666"

# ==============================================
# Himax USB (for Grove Vision AI V2)
# ==============================================

SUBSYSTEM=="usb", ATTR{idVendor}=="0d28", MODE="0666"
SUBSYSTEM=="tty", ATTRS{idVendor}=="0d28", MODE="0666"
